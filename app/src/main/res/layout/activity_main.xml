<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbInstallTimeDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_install_time_delivery" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbOnDemandDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_on_demand_delivery" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbConditionalDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_conditional_delivery" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acbInstantDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_instant_delivery" />

</androidx.appcompat.widget.LinearLayoutCompat>